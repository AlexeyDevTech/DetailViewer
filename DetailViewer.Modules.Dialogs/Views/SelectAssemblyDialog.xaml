<UserControl
    x:Class="DetailViewer.Modules.Dialogs.Views.SelectAssemblyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    MaxWidth="1000"
    d:DesignHeight="600"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox
            Grid.Row="0"
            Margin="5"
            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

        <DataGrid
            Grid.Row="1"
            Margin="5"
            ItemsSource="{Binding FilteredAssemblies}"
            SelectedItem="{Binding SelectedAssembly}"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsSelected}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Item.ESKDNumber.FullCode}"
                    Header="ЕСКД" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Item.Name}"
                    Header="Наименование" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            Grid.Row="2"
            Margin="5"
            FontWeight="Bold"
            Text="Входит в изделия:" />

        <DataGrid
            Grid.Row="3"
            Margin="5"
            IsReadOnly="True"
            ItemsSource="{Binding RelatedProducts}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ESKDNumber.FullCode}"
                    Header="ЕСКД" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Name}"
                    Header="Наименование" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="4"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding OkCommand}"
                Content="OK"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                Command="{Binding CancelCommand}"
                Content="Отмена"
                Style="{StaticResource SecondaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
