<UserControl x:Class="DetailViewer.Modules.Dialogs.Views.SelectAssemblyDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

        <DataGrid Grid.Row="1" Margin="5" ItemsSource="{Binding FilteredAssemblies}" SelectedItem="{Binding SelectedAssembly}" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsSelected}" />
                <DataGridTextColumn Header="ЕСКД" Binding="{Binding Item.ESKDNumber.FullCode}" Width="*"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Item.Name}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="Входит в изделия:" Margin="5" FontWeight="Bold"/>

        <DataGrid Grid.Row="3" Margin="5" ItemsSource="{Binding RelatedProducts}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ЕСКД" Binding="{Binding ESKDNumber.FullCode}" Width="*"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="OK" Command="{Binding OkCommand}" Style="{StaticResource PrimaryButtonStyle}" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
