<UserControl x:Class="DetailViewer.Modules.Dialogs.Views.SelectSheetDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Выберите лист для импорта:" />
            <ComboBox ItemsSource="{Binding SheetNames}" SelectedItem="{Binding SelectedSheet}" />
            <CheckBox Content="Создать связи" IsChecked="{Binding CreateRelationships}" Margin="0,10,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding OkCommand}" Width="75" Margin="5" />
            <Button Content="Отмена" Command="{Binding CancelCommand}" Width="75" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>