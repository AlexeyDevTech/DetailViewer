<UserControl
    x:Class="DetailViewer.Modules.Dialogs.Views.DocumentRecordForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DetailViewer.Modules.Dialogs.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    MaxWidth="1000"
    d:DesignHeight="950"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource BackgroundLightBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter" />
        <local:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="10" Background="{StaticResource BackgroundWhiteBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Дата:" />
        <DatePicker
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            SelectedDate="{Binding DocumentRecord.Date}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="ЕСКД номер:" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Horizontal">
            <TextBox
                Width="50"
                IsReadOnly="True"
                Text="{Binding CompanyCode}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox
                Width="80"
                Text="{Binding ClassNumberString, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox
                Width="50"
                IsReadOnly="{Binding IsManualNumber, Converter={StaticResource InvertBooleanConverter}}"
                Text="{Binding DetailNumber, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            
             <TextBox Width="50" Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsNewVersionEnabled}" />
            <CheckBox Margin="10,0,0,0" Content="Ручной ввод" IsChecked="{Binding IsManualNumber}" />
            <CheckBox
                Margin="10,0,0,0"
                Content="Новое исполнение"
                IsChecked="{Binding IsNewVersionEnabled}" />
        </StackPanel>

        <ListBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="250"
            Margin="5"
            ItemsSource="{Binding FilteredClassifiers}"
            SelectedItem="{Binding SelectedClassifier}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="150"
                            Height="100"
                            Margin="5"
                            Stretch="Uniform">
                            <Image.ToolTip>
                                <Image
                                    Width="350"
                                    Height="200"
                                    Source="{Binding ImagePaths, Converter={StaticResource ImagePathConverter}}"
                                    Stretch="Uniform" />
                            </Image.ToolTip>
                            <Image.Source>
                                <Binding Path="ImagePaths">
                                    <Binding.Converter>
                                        <StaticResource ResourceKey="ImagePathConverter" />
                                    </Binding.Converter>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{Binding Code}" />
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <CheckBox
                Margin="5,0"
                Content="Только мои записи"
                IsChecked="{Binding FilterByFullName}" />
            <TextBlock
                Margin="5,0"
                HorizontalAlignment="Right"
                Text="Выберите базовую запись для создания нового исполнения:"
                Visibility="{Binding IsNewVersionEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryAccentRedBrush}" />
                        <Style.Triggers>
                            <Trigger Property="Visibility" Value="Visible">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                From="0.0"
                                                To="1.0"
                                                Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <DataGrid
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="150"
            Margin="5"
            AutoGenerateColumns="False"
            IsReadOnly="{Binding IsNewVersionEnabled, Converter={StaticResource InvertBooleanConverter}}"
            ItemsSource="{Binding FilteredDocumentRecords}"
            SelectedItem="{Binding SelectedBaseRecord}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ESKDNumber.FullCode}"
                    Header="ЕСКД номер" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Имя" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FullName}"
                    Header="ФИО" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="ЯСТ код:" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Text="{Binding DocumentRecord.YASTCode}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Имя:" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Text="{Binding DocumentRecord.Name}" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Номер сборки:" />
        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Orientation="Horizontal">
            <TextBox
                Width="50"
                IsReadOnly="True"
                Text="ДТМЛ" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="80" Text="{Binding AssemblyNumberClassNumberString, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="50" Text="{Binding AssemblyNumberDetailNumber, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            <TextBox Width="50" Text="{Binding AssemblyNumberVersion, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Имя сборки:" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Text="{Binding DocumentRecord.AssemblyName}" />

        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Номер продукта:" />
        <StackPanel
            Grid.Row="9"
            Grid.Column="1"
            Orientation="Horizontal">
            <TextBox
                Width="50"
                IsReadOnly="True"
                Text="ДТМЛ" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="80" Text="{Binding ProductNumberClassNumberString, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="50" Text="{Binding ProductNumberDetailNumber, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            <TextBox Width="50" Text="{Binding ProductNumberVersion, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock
            Grid.Row="10"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Имя продукта:" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Text="{Binding DocumentRecord.ProductName}" />

        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="ФИО:" />
        <TextBox
            Grid.Row="11"
            Grid.Column="1"
            Text="{Binding DocumentRecord.FullName}" />

        <StackPanel
            Grid.Row="12"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding SaveCommand}"
                Content="Сохранить"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                Command="{Binding CancelCommand}"
                Content="Отмена"
                Style="{StaticResource SecondaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>