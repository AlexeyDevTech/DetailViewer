<UserControl
    x:Class="DetailViewer.Modules.Dialogs.Views.DocumentRecordForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DetailViewer.Modules.Dialogs.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    MaxWidth="1000"
    d:DesignHeight="950"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource BackgroundLightBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>
    <Grid Margin="10" Background="{StaticResource BackgroundWhiteBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="Дата:" />
        <DatePicker
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            SelectedDate="{Binding DocumentRecord.Date}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Text="ЕСКД номер:" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Horizontal">
            <TextBox
                Width="50"
                IsReadOnly="True"
                Text="{Binding CompanyCode}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="80" Text="{Binding ClassNumberString, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox
                Width="50"
                IsEnabled="{Binding IsManualDetailNumberEnabled}"
                Text="{Binding DetailNumber, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            <TextBox
                Width="50"
                IsEnabled="{Binding IsNewVersionEnabled, Converter={StaticResource InverseBooleanConverter}}"
                Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox
                Margin="5,0,0,0"
                Content="Ручной ввод"
                IsChecked="{Binding IsManualDetailNumberEnabled}"
                IsEnabled="{Binding IsNewVersionEnabled, Converter={StaticResource InverseBooleanConverter}}" />
            <CheckBox
                Margin="5,0,0,0"
                Content="Новое исполнение"
                IsChecked="{Binding IsNewVersionEnabled}" />
        </StackPanel>

        <ListBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="150"
            Margin="5"
            ItemsSource="{Binding FilteredClassifiers}"
            SelectedItem="{Binding SelectedClassifier}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="150"
                            Height="100"
                            Margin="5"
                            Stretch="Uniform">
                            <Image.ToolTip>
                                <Image
                                    Width="350"
                                    Height="200"
                                    Source="{Binding ImagePaths, Converter={StaticResource ImagePathConverter}}"
                                    Stretch="Uniform" />
                            </Image.ToolTip>
                            <Image.Source>
                                <Binding Path="ImagePaths">
                                    <Binding.Converter>
                                        <StaticResource ResourceKey="ImagePathConverter" />
                                    </Binding.Converter>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{Binding Code}" />
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <CheckBox
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            Content="Только мои"
            IsChecked="{Binding FilterByFullName}" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="Red"
            Text="{Binding UserMessage}"
            Visibility="{Binding IsNewVersionEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <DataGrid
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            MinHeight="100"
            MaxHeight="400"
            Margin="5"
            VerticalAlignment="Top"
            ItemsSource="{Binding FilteredRecords}"
            SelectedItem="{Binding SelectedRecordToCopy}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ESKDNumber.FullCode}"
                    Header="ЕСКД" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Имя" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding FullName}"
                    Header="ФИО" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="ЯСТ код:" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Margin="5,10,5,5"
            Text="{Binding DocumentRecord.YASTCode}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Имя:" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Margin="5,10,5,5"
            Text="{Binding DocumentRecord.Name}" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Номер сборки:" />
        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Margin="5,10,5,5"
            Orientation="Horizontal">
            <TextBox Width="50" Text="{Binding AssemblyPart1, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="80" Text="{Binding AssemblyPart2, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="50" Text="{Binding AssemblyPart3, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            <TextBox Width="50" Text="{Binding AssemblyPart4, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Имя сборки:" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Margin="5,10,5,5"
            Text="{Binding DocumentRecord.AssemblyName}" />

        <TextBlock
            Grid.Row="9"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Номер продукта:" />
        <StackPanel
            Grid.Row="9"
            Grid.Column="1"
            Margin="5,10,5,5"
            Orientation="Horizontal">
            <TextBox Width="50" Text="{Binding ProductPart1, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="80" Text="{Binding ProductPart2, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="." />
            <TextBox Width="50" Text="{Binding ProductPart3, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Margin="2,0"
                VerticalAlignment="Center"
                Text="-" />
            <TextBox Width="50" Text="{Binding ProductPart4, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TextBlock
            Grid.Row="10"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Имя продукта:" />
        <TextBox
            Grid.Row="10"
            Grid.Column="1"
            Margin="5,10,5,5"
            Text="{Binding DocumentRecord.ProductName}" />

        <TextBlock
            Grid.Row="11"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="Сборка:" />
        <ComboBox Grid.Row="11" Grid.Column="1" Margin="5,10,5,5" ItemsSource="{Binding Assemblies}" SelectedItem="{Binding SelectedAssembly}" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="12" Grid.Column="0" Margin="5,10,5,5" VerticalAlignment="Center" Text="Изделие:"/>
        <ComboBox Grid.Row="12" Grid.Column="1" Margin="5,10,5,5" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" DisplayMemberPath="Name"/>

        <TextBlock
            Grid.Row="13"
            Grid.Column="0"
            Margin="5,10,5,5"
            VerticalAlignment="Center"
            Text="ФИО:" />
        <TextBox
            Grid.Row="13"
            Grid.Column="1"
            Margin="5,10,5,5"
            Text="{Binding DocumentRecord.FullName}" />

        <StackPanel
            Grid.Row="14"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{Binding SaveCommand}"
                Content="Сохранить"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                Command="{Binding CancelCommand}"
                Content="Отмена"
                Style="{StaticResource SecondaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>