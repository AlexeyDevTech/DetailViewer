<UserControl
    x:Class="DetailViewer.Modules.Dialogs.Views.DocumentRecordForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Style for Excel-like TextBox cells  -->
        <Style x:Key="ExcelTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="#FFDDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="White" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Дата:" />
        <DatePicker
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            SelectedDate="{Binding DocumentRecord.Date}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="ЕСКД номер:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding ESKDNumberString, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="ЯСТ код:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.YASTCode}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Имя:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.Name}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Номер сборки:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.AssemblyNumber}" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Имя сборки:" />
        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.AssemblyName}" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Номер продукта:" />
        <TextBox
            Grid.Row="6"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.ProductNumber}" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Имя продукта:" />
        <TextBox
            Grid.Row="7"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.ProductName}" />

        <TextBlock
            Grid.Row="8"
            Grid.Column="0"
            Margin="5"
            VerticalAlignment="Center"
            Style="{StaticResource ExcelCellStyle}"
            Text="Полное имя:" />
        <TextBox
            Grid.Row="8"
            Grid.Column="1"
            Style="{StaticResource ExcelTextBoxStyle}"
            Text="{Binding DocumentRecord.FullName}" />

        <StackPanel
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Command="{Binding SaveCommand}" Content="Сохранить" />
            <Button Command="{Binding CancelCommand}" Content="Отмена" />
        </StackPanel>
    </Grid>
</UserControl>