<UserControl x:Class="DetailViewer.Modules.Dialogs.Views.DocumentRecordForm" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Style for Excel-like TextBox cells -->
        <Style x:Key="ExcelTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Дата:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <DatePicker SelectedDate="{Binding DocumentRecord.Date}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="ЕСКД номер:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelTextBoxStyle}"/>
        <TextBox Text="{Binding ESKDNumberString, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="ЯСТ код:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.YASTCode}" Grid.Row="2" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Имя:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.Name}" Grid.Row="3" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Номер сборки:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.AssemblyNumber}" Grid.Row="4" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Имя сборки:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.AssemblyName}" Grid.Row="5" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Номер продукта:" Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.ProductNumber}" Grid.Row="6" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Имя продукта:" Grid.Row="7" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.ProductName}" Grid.Row="7" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <TextBlock Text="Полное имя:" Grid.Row="8" Grid.Column="0" Margin="5" VerticalAlignment="Center" Style="{StaticResource ExcelCellStyle}"/>
        <TextBox Text="{Binding DocumentRecord.FullName}" Grid.Row="8" Grid.Column="1" Style="{StaticResource ExcelTextBoxStyle}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="5">
            <Button Content="Сохранить" Command="{Binding SaveCommand}"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>