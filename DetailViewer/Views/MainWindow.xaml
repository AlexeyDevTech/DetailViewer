<Window x:Class="DetailViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="550" Width="1225" 
        Background="{StaticResource BackgroundLightBrush}" 
        Icon="{StaticResource AppIconImage}">
    <Grid>
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" 
                    Background="{StaticResource BackgroundWhiteBrush}" 
                    BorderBrush="{StaticResource BorderLightBrush}" 
                    BorderThickness="0,0,0,1">
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Navigation Buttons -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Реестр" 
                                Command="{Binding NavigateCommand}" 
                                CommandParameter="ExplorerView" 
                                Style="{StaticResource ToolBarButtonStyle}" 
                                Margin="10,0,0,0"/>
                        <!-- Add other navigation buttons here -->
                    </StackPanel>

                    <!-- User Profile Section -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="{Binding ActiveUserFullName}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0" 
                                   Foreground="{StaticResource ForegroundDarkBrush}"/>
                        
                        <Button Width="30" Height="30" Style="{StaticResource ToolBarButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="{StaticResource PrimaryAccentBrush}"/>
                                        <TextBlock Text="{Binding ActiveUserFullName[0]}" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="{StaticResource PrimaryAccentForegroundBrush}"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Настройки" Command="{Binding ShowSettingsCommand}"/>
                                    <MenuItem Header="О программе" Command="{Binding ShowAboutCommand}"/>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </DockPanel>
    </Grid>
</Window>