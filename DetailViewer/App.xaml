<prism:PrismApplication x:Class="DetailViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DetailViewer"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:core="clr-namespace:DetailViewer.Core.Models;assembly=DetailViewer.Core" >
    <Application.Resources>
        <!-- Material-like Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/> <!-- Material Blue -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/> <!-- Darker Blue on hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/> <!-- Even Darker Blue on press -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for Excel-like cells -->
        <Style x:Key="ExcelCellStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style for Excel-like header cells -->
        <Style x:Key="ExcelHeaderCellStyle" TargetType="TextBlock" BasedOn="{StaticResource ExcelCellStyle}">
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Style for Excel-like cell borders -->
        <Style x:Key="ExcelCellBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="0 0 1 1"/>
        </Style>

        <!-- DataTemplate for each DocumentRecord (row) -->
        <DataTemplate DataType="{x:Type core:DocumentRecord}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/> <!-- Date -->
                    <ColumnDefinition Width="150"/> <!-- ESKDNumber -->
                    <ColumnDefinition Width="100"/> <!-- YASTCode -->
                    <ColumnDefinition Width="*"/>    <!-- Name -->
                    <ColumnDefinition Width="150"/> <!-- AssemblyNumber -->
                    <ColumnDefinition Width="*"/>    <!-- AssemblyName -->
                    <ColumnDefinition Width="150"/> <!-- ProductNumber -->
                    <ColumnDefinition Width="*"/>    <!-- ProductName -->
                    <ColumnDefinition Width="150"/> <!-- FullName -->
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="1" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding ESKDNumber.GetCode}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="2" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding YASTCode}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="3" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding Name}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="4" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding AssemblyNumber}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="5" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding AssemblyName}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="6" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding ProductNumber}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="7" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding ProductName}" Style="{StaticResource ExcelCellStyle}"/></Border>
                <Border Grid.Column="8" Style="{StaticResource ExcelCellBorderStyle}"><TextBlock Text="{Binding FullName}" Style="{StaticResource ExcelCellStyle}"/></Border>
            </Grid>
        </DataTemplate>

    </Application.Resources>
</prism:PrismApplication>
